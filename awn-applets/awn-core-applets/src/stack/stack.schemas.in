<gconfschemafile>

    <schemalist>
    
      <schema>
        <key>/schemas/apps/awn-stack/prefs/default_drag_action</key>
        <owner>awn-stack</owner>
        <type>string</type>
        <default>link</default>
        <locale name="C">
          <short>The default action when files are dropped on the applet: "copy", "move" or "link". If it is set to "system", you can modify the behavior with SHIFT, CTRL and ALT (keys depend on you system).</short>
          <long></long>
        </locale>
      </schema>
      
      <schema>
        <key>/schemas/apps/awn-stack/prefs/applet_icon</key>
        <owner>awn-stack</owner>
        <type>string</type>
        <default>folder-drag-accept</default>
        <locale name="C">
          <short>Specify an icon to use for the stack applet (button).</short>
          <long></long>
        </locale>
      </schema>       
      
	  <schema>
        <key>/schemas/apps/awn-stack/prefs/enable_browsing</key>
        <owner>awn-stack</owner>
        <type>bool</type>
        <default>TRUE</default>
        <locale name="C">
          <short>Support browsing of folders. If false, folders will be openend in the default filemanager</short>
          <long></long>
        </locale>
      </schema>
      
      <schema>
        <key>/schemas/apps/awn-stack/prefs/show_files</key>
        <owner>awn-stack</owner>
        <type>bool</type>
        <default>TRUE</default>
        <locale name="C">
          <short>Show files in the stack</short>
          <long></long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/awn-stack/prefs/show_hidden_files</key>
        <owner>awn-stack</owner>
        <type>bool</type>
        <default>FALSE</default>
        <locale name="C">
          <short>Show hideen files in the stack</short>
          <long></long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/awn-stack/prefs/show_folders</key>
        <owner>awn-stack</owner>
        <type>bool</type>
        <default>TRUE</default>
        <locale name="C">
          <short>Show folders in the stack</short>
          <long></long>
        </locale>
      </schema>
      
      <schema>
        <key>/schemas/apps/awn-stack/prefs/show_desktop_items</key>
        <owner>awn-stack</owner>
        <type>bool</type>
        <default>TRUE</default>
        <locale name="C">
          <short>Show desktop items (applications) in the stack</short>
          <long></long>
        </locale>
      </schema>
      
      <schema>
        <key>/schemas/apps/awn-stack/prefs/enable_composite_applet_icon</key>
        <owner>awn-stack</owner>
        <type>bool</type>
        <default>TRUE</default>
        <locale name="C">
          <short>If true, the applet icon is a composite of the 3 last added files</short>
          <long></long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/awn-stack/prefs/backend_folder</key>
        <owner>awn-stack</owner>
        <type>string</type>
        <default></default>
        <locale name="C">
          <short>Specify a full path to a folder to use as backend.</short>
          <long></long>
        </locale>
      </schema>      

      <schema>
        <key>/schemas/apps/awn-stack/prefs/icon_size</key>
        <owner>awn-stack</owner>
        <type>int</type>
        <default>48</default>
        <locale name="C">
          <short>The size of the stack icons</short>
          <long></long>
        </locale>
      </schema> 
      
	  <schema>
        <key>/schemas/apps/awn-stack/prefs/maximum_rows</key>
        <owner>awn-stack</owner>
        <type>int</type>
        <default>4</default>
        <locale name="C">
          <short>The maximum rows a stack page should display</short>
          <long></long>
        </locale>
      </schema> 
      
      <schema>
        <key>/schemas/apps/awn-stack/prefs/maximum_cols</key>
        <owner>awn-stack</owner>
        <type>int</type>
        <default>5</default>
        <locale name="C">
          <short>The maximum columns a stack page should display</short>
          <long></long>
        </locale>
      </schema> 

    </schemalist>

</gconfschemafile>  
